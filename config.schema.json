{
  "pluginAlias": "SP108EPlatform",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "SP108EPlatform",
        "description": "Plugin name as displayed in the Homebridge log"
      },
      "devices": {
        "title": "Devices",
        "type": "array",
        "required": true,
        "items": {
          "title": "Device",
          "type": "object",
          "properties": {
            "host": {
              "title": "Host",
              "type": "string",
              "required": true,
              "placeholder": "e.g. 192.168.7.126",
              "description": "Host / IP address of the LED controller"
            },
            "port": {
              "title": "Port",
              "type": "integer",
              "required": true,
              "placeholder": "e.g. 8189",
              "default": 8189,
              "description": "Port of the LED controller",
              "maximum": 65535
            },
            "name": {
              "title": "Name",
              "type": "string",
              "required": true,
              "placeholder": "eg. Bedroom LED",
              "description": "Name of the LED controller"
            },
            "chip": {
              "title": "Chip Type",
              "type": "string",
              "required": true,
              "enum": [
                "SM16703",
                "TM1804",
                "UCS1903",
                "WS2811",
                "WS2801",
                "SK6812",
                "LPD6803",
                "LPD8806",
                "APA102",
                "APA105",
                "DMX512",
                "TM1914",
                "TM1913",
                "P9813",
                "INK1003",
                "P943S",
                "P9411",
                "P9413",
                "TX1812",
                "TX1813",
                "GS8206",
                "GS8208",
                "SK9822",
                "TM1814",
                "SK6812_RGBW",
                "P9414",
                "P9412"
              ]
            },
            "colorOrder": {
              "title": "Order of RGB Channels",
              "type": "string",
              "required": true,
              "enum": [
                "RGB",
                "RBG",
                "GRB",
                "GBR",
                "BRG",
                "BGR"
              ]
            }, 
            "segments": {
              "title": "Number of Segments",
              "type": "integer",
              "required": true,
              "minimum": 1
            }, 
            "ledsPerSegment": {
              "title": "Number of LEDs per Segment",
              "type": "integer",
              "required": true,
              "minimum": 1
            },
            "dreamModeAnimationNumber" {
              "title": "Dream Mode Animation Number",
              "type": "integer",
              "required": false,
              "minimum": 1,
              "maximum": 180,
              "default": 1,
              "placeholder": "1-180, default - 1"
            },
            "debug": {
              "title": "Debug",
              "type": "boolean",
              "default": false,
              "description": "Show debug logs in Homebridge"
            }
          }
        }
      }
    }
  }
}